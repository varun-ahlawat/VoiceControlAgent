# Environment Configuration for Persona Plex
# Copy this file to .env and fill in your values

# ============================================
# Model Configuration
# ============================================
MODEL_PATH=/opt/persona-plex/models/persona-plex
MODEL_NAME=nvidia/Persona-Plex
DEVICE=cuda  # or 'cpu' for testing
TORCH_DTYPE=float16  # float16, bfloat16, or float32

# ============================================
# Hugging Face Configuration
# ============================================
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here
HF_HOME=/opt/persona-plex/cache

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
WEBSOCKET_PORT=8080
WORKERS=1  # Number of worker processes

# ============================================
# CUDA Configuration
# ============================================
CUDA_VISIBLE_DEVICES=0
CUDA_LAUNCH_BLOCKING=0

# ============================================
# Performance Settings
# ============================================
MAX_BATCH_SIZE=4
MAX_SEQUENCE_LENGTH=2048
NUM_BEAMS=1
TOP_K=50
TOP_P=0.95
TEMPERATURE=0.7
MAX_NEW_TOKENS=512

# ============================================
# Audio Configuration
# ============================================
SAMPLE_RATE=16000
AUDIO_FORMAT=wav
MAX_AUDIO_DURATION=30  # seconds

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/opt/persona-plex/logs/app.log
LOG_FORMAT=json  # json or text

# ============================================
# Monitoring
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# GCP Configuration (Optional)
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=your-bucket-name
GCP_REGION=us-central1

# ============================================
# Security
# ============================================
# API_KEY=your_api_key_here  # Uncomment to enable API key authentication
CORS_ORIGINS=*  # Comma-separated list of allowed origins

# ============================================
# Development Settings
# ============================================
DEBUG=false
RELOAD=false  # Hot reload for development
